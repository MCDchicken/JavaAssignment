public class Customer {
    private String name;
    private String phoneNo;
    private int duration; //duration of stay in nights
    private String roomType;

    //constructor for customer details
    public Customer(String name, String phoneNo, int duration, String roomType){
        this.name = name;
        this.phoneNo = phoneNo;
        this.duration = duration;
        this.roomType = roomType;

    }

    //getter
    public String getName(){
        return name;
    }

    public String getPhoneNo(){
        return phoneNo;
    }

    public int getDuration(){
        return duration;
    }

    public String getRoomType(){
        return roomType;
    }

    //display customer details
    public void displayCustomerDetails(){
        System.out.println("Do double confirm your details.");
        System.out.println("Name: " + name);
        System.out.println("Phone Number: " + phoneNo);
        System.out.println("Duration of Stay: " + duration + " nights");
        System.out.println("Room Type: " + roomType);
    }







}
